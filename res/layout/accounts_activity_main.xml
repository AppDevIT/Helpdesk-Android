<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basic_activity1"
    tools:ignore="MergeRootFrame"
    android:background="#000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#EAC117"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@raw/firstintentlogo"
            android:layout_weight="1" android:contentDescription="@string/headLogoName"/>

       
 
     </LinearLayout>
     
     <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            <Button
                android:id="@+id/accountsActivityButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/accountsActivityButton1"
                android:textColor="#EAC117" />
            
            <Button
                android:id="@+id/accountsActivityButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/accountsActivityButton2"
                android:textColor="#EAC117" />

            <Button
                android:id="@+id/accountsActivityButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountsActivityButton3"
                android:textColor="#EAC117" />

            <Button
                android:id="@+id/accountsActivityButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountsActivityButton4"
                android:textColor="#EAC117" />

            <Button
                android:id="@+id/accountsActivityButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountsActivityButton5"
                android:textColor="#EAC117" />

            <Button
                android:id="@+id/accountsActivityButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountsActivityButton6"
                android:textColor="#EAC117" />

             </LinearLayout>


        </ScrollView>
</FrameLayout>